<!DOCTYPE html>
<html>
<head>
    <title>Wine Quality ML Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body class="bg-light">

<div class="container mt-5">
    <h1 class="text-center mb-4">üç∑ Wine Quality Prediction - ML Dashboard</h1>

    <div class="row">
        <% algorithms.forEach(a => { %>
            <div class="col-md-4 mt-4">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <h4><%= a.name %></h4>
                        <a href="/algorithm/<%= a.id %>" class="btn btn-primary mt-2">
                            View Results
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

</body>
</html>
